@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="" title="">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
             <form class="form-inline" asp-area="" asp-controller="Home" asp-action="Logout">
                  <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
             </form>
        </li> 
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="">Login</a>
        </li>
    }
</ul>
