@model ScheduleAPI.Models.Schedule
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eay Learning</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="overflow-x: hidden;">
    <div class="container-main">
        <h1>Edit</h1>
        <h4>Schedule</h4>
        <div class ="bg-light">
            <div style="margin: 20px;">
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit">
                            <input asp-for="ScheduleId" type="hidden" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ActivityName" class="control-label"></label>
                                <select asp-for="ActivityName" class="form-control" required>
                                    @foreach (var item in Model.Activities)
                                    {
                                        <option>@Html.DisplayFor(model => item.Name)</option>
                                    }
                                </select>
                                <span asp-validation-for="ActivityName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TeacherName" class="control-label"></label>
                                <input asp-for="TeacherName" class="form-control" />
                                <span asp-validation-for="TeacherName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DayOfTheWeek" class="control-label"></label>
                                <input asp-for="DayOfTheWeek" class="form-control" />
                                <span asp-validation-for="DayOfTheWeek" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StartTime" class="control-label"></label>
                                <input asp-for="StartTime" class="form-control" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EndTime" class="control-label"></label>
                                <input asp-for="EndTime" class="form-control" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</body>
</html>