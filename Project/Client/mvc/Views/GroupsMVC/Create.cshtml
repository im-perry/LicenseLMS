@model GroupsAPI.Models.Group

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Easy Learning</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
    <script src="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/js/bootstrap-multiselect.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#selectList").multiselect({
                includeSelectAllOption: true
            });
        });
    </script>
</head>
<body style="overflow-x: hidden;" class = "">
    <div class="container-main">
        <h1>Create</h1>
        <h4>Group</h4>
        <div class="bg-light">
            <div style="margin: 20px;">
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Year" class="control-label"></label>
                                <input asp-for="Year" class="form-control" required />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TutorName" class="control-label"></label>
                                <input asp-for="TutorName" class="form-control" required />
                                <span asp-validation-for="TutorName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SpecialisationName" class="control-label"></label>
                                <select asp-for="SpecialisationName" class="form-control" required>
                                    @foreach (var item in Model.Specialisations)
                                    {
                                        <option>@Html.DisplayFor(model => item.Name)</option>
                                    }
                                </select>
                                <span asp-validation-for="SpecialisationName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</body>
</html>